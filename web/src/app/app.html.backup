<lib-ui-sidebar-provider>
  <!-- Sidebar -->
  <lib-ui-sidebar variant="sidebar" collapsible="offcanvas">
    <!-- Sidebar Header -->
    <lib-ui-sidebar-header>
      <div class="flex items-center gap-2">
        <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary">
          <span class="text-sm font-bold text-primary-foreground">SF</span>
        </div>
        <div class="flex flex-col flex-1">
          <span class="text-sm font-semibold">StreakFlow</span>
          <span class="text-xs text-muted-foreground">UI Components</span>
        </div>
        <!-- Theme Toggle -->
        <ui-switch [(ngModel)]="darkMode" (ngModelChange)="toggleTheme()" class="ml-auto"></ui-switch>
      </div>
    </lib-ui-sidebar-header>

    <!-- Sidebar Content with Navigation Menu -->
    <lib-ui-sidebar-content>
      <lib-ui-sidebar-group>
        <lib-ui-sidebar-menu>
          <lib-ui-sidebar-menu-item>
            <lib-ui-sidebar-menu-button 
              [isActive]="activeSection() === 'buttons'" 
              (click)="navigateToSection('buttons')">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect width="20" height="14" x="2" y="5" rx="2"/>
              </svg>
              <span>Buttons</span>
            </lib-ui-sidebar-menu-button>
          </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'badges'" 
            (click)="navigateToSection('badges')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"/>
            </svg>
            <span>Badges</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'avatars'" 
            (click)="navigateToSection('avatars')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <circle cx="12" cy="10" r="3"/>
              <path d="M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662"/>
            </svg>
            <span>Avatars</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'cards'" 
            (click)="navigateToSection('cards')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="14" x="2" y="5" rx="2"/>
            </svg>
            <span>Cards</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'inputs'" 
            (click)="navigateToSection('inputs')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="12" x="2" y="6" rx="2"/>
            </svg>
            <span>Inputs</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'progress'" 
            (click)="navigateToSection('progress')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" x2="12" y1="2" y2="6"/>
              <line x1="12" x2="12" y1="18" y2="22"/>
              <line x1="4.93" x2="7.76" y1="4.93" y2="7.76"/>
            </svg>
            <span>Progress</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'forms'" 
            (click)="navigateToSection('forms')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span>Form Controls</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'navigation'" 
            (click)="navigateToSection('navigation')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M8 2v4"/>
              <path d="M16 2v4"/>
              <rect width="18" height="18" x="3" y="4" rx="2"/>
              <path d="M3 10h18"/>
            </svg>
            <span>Navigation</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>

        <lib-ui-sidebar-menu-item>
          <lib-ui-sidebar-menu-button 
            [isActive]="activeSection() === 'overlays'" 
            (click)="navigateToSection('overlays')">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="18" height="18" x="3" y="3" rx="2"/>
              <path d="M9 9h.01"/>
              <path d="M15 9h.01"/>
            </svg>
            <span>Overlays</span>
          </lib-ui-sidebar-menu-button>
        </lib-ui-sidebar-menu-item>
        </lib-ui-sidebar-menu>
      </lib-ui-sidebar-group>
    </lib-ui-sidebar-content>

    <!-- Sidebar Footer -->
    <lib-ui-sidebar-footer>
      <div class="flex items-center gap-2">
        <ui-avatar size="sm" fallback="JD"></ui-avatar>
        <div class="flex flex-col flex-1 min-w-0">
          <span class="text-xs font-medium truncate">John Doe</span>
          <span class="text-xs text-muted-foreground truncate">john@example.com</span>
        </div>
      </div>
    </lib-ui-sidebar-footer>
  </lib-ui-sidebar>

  <!-- Main Content Area -->
  <lib-ui-sidebar-inset>
    <!-- Header with Sidebar Trigger -->
    <header class="sticky top-0 z-10 flex h-14 shrink-0 items-center gap-2 border-b bg-background px-4">
      <lib-ui-sidebar-trigger></lib-ui-sidebar-trigger>
      <ui-separator orientation="vertical" class="mr-2 h-4"></ui-separator>
      <h1 class="text-lg font-semibold">{{activeSection() | titlecase}}</h1>
      <div class="ml-auto flex items-center gap-2">
        <ui-badge variant="outline">{{darkMode() ? 'Dark' : 'Light'}}</ui-badge>
    </div>
    </header>

    <!-- Content -->
    <div class="flex-1 overflow-auto p-4 md:p-8">
      <!-- Buttons Section -->
      @if (activeSection() === 'buttons') {
        <div class="space-y-8 max-w-4xl">
          <div>
            <h2 class="text-2xl font-bold mb-4">Button Components</h2>
            <p class="text-muted-foreground mb-6">Interactive buttons for all your actions</p>
    </div>

    <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Variants</h3>
              <div class="flex flex-wrap gap-3">
                <ui-button variant="primary">Primary</ui-button>
                <ui-button variant="secondary">Secondary</ui-button>
                <ui-button variant="destructive">Destructive</ui-button>
                <ui-button variant="outline">Outline</ui-button>
                <ui-button variant="ghost">Ghost</ui-button>
                <ui-button variant="link">Link</ui-button>
        </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Sizes</h3>
              <div class="flex flex-wrap items-center gap-3">
                <ui-button size="sm">Small</ui-button>
                <ui-button size="md">Medium</ui-button>
                <ui-button size="lg">Large</ui-button>
                <ui-button size="icon">
                  <app-icon name="⚙" [size]="16"></app-icon>
                </ui-button>
        </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">States</h3>
              <div class="flex flex-wrap gap-3">
                <ui-button>Default</ui-button>
                <ui-button disabled>Disabled</ui-button>
                <ui-button [loading]="loading()" (click)="toggleLoading()">Toggle Loading</ui-button>
        </div>
      </div>

          <ui-separator></ui-separator>

          <div>
              <h3 class="text-lg font-semibold mb-3">With Icons</h3>
              <div class="flex flex-wrap gap-3">
                <ui-button>
                  <span icon-left>
                    <app-icon name="+" [size]="16"></app-icon>
                  </span>
                  Add Item
        </ui-button>
                <ui-button variant="secondary">
                  Save
                  <span icon-right>
                    <app-icon name="✓" [size]="16"></app-icon>
                  </span>
              </ui-button>
                </div>
              </div>
              </div>
                </div>
      }

      <!-- Badges Section -->
      @if (activeSection() === 'badges') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Badge Components</h2>
            <p class="text-muted-foreground mb-6">Small labels for status and categories</p>
      </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Variants</h3>
              <div class="flex flex-wrap gap-3">
                <ui-badge variant="default">Default</ui-badge>
                <ui-badge variant="secondary">Secondary</ui-badge>
                <ui-badge variant="destructive">Destructive</ui-badge>
                <ui-badge variant="outline">Outline</ui-badge>
        </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Sizes</h3>
              <div class="flex flex-wrap gap-3">
                <ui-badge size="sm">Small</ui-badge>
                <ui-badge size="md">Medium</ui-badge>
            </div>
            </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Use Cases</h3>
        <div class="space-y-4">
          <div>
                  <p class="text-sm text-muted-foreground mb-2">Status Indicators</p>
                  <div class="flex flex-wrap gap-2">
                    <ui-badge variant="default">Active</ui-badge>
                    <ui-badge variant="secondary">Pending</ui-badge>
                    <ui-badge variant="destructive">Failed</ui-badge>
                    <ui-badge variant="outline">Draft</ui-badge>
        </div>
      </div>

      <div>
                  <p class="text-sm text-muted-foreground mb-2">Tags</p>
                  <div class="flex flex-wrap gap-2">
                    <ui-badge variant="outline">Health</ui-badge>
                    <ui-badge variant="outline">Fitness</ui-badge>
                    <ui-badge variant="outline">Learning</ui-badge>
                    <ui-badge variant="outline">Productivity</ui-badge>
            </div>
              </div>
              </div>
              </div>
              </div>
              </div>
      }

      <!-- Avatars Section -->
      @if (activeSection() === 'avatars') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Avatar Components</h2>
            <p class="text-muted-foreground mb-6">User profile images with fallback</p>
      </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Sizes</h3>
              <div class="flex flex-wrap items-center gap-4">
                <ui-avatar size="sm" fallback="SM"></ui-avatar>
                <ui-avatar size="md" fallback="MD"></ui-avatar>
                <ui-avatar size="lg" fallback="LG"></ui-avatar>
                <ui-avatar size="xl" fallback="XL"></ui-avatar>
        </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">With Images</h3>
              <div class="flex flex-wrap gap-4">
                <ui-avatar size="md" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=64&h=64&fit=crop" fallback="JD"></ui-avatar>
                <ui-avatar size="md" src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=64&h=64&fit=crop" fallback="AS"></ui-avatar>
                <ui-avatar size="md" src="https://broken-url.com/image.jpg" fallback="FB"></ui-avatar>
          </div>
          </div>
        </div>
      </div>
      }

      <!-- Cards Section -->
      @if (activeSection() === 'cards') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Card Components</h2>
            <p class="text-muted-foreground mb-6">Container components for grouped content</p>
          </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Basic Card</h3>
        <ui-card>
          <ui-card-header>
            <ui-card-title>Card Title</ui-card-title>
                  <ui-card-description>Card description goes here</ui-card-description>
          </ui-card-header>
          <ui-card-content>
                  <p class="text-sm">Card content with some information.</p>
          </ui-card-content>
                <ui-card-footer>
                  <div class="flex justify-end gap-2">
                    <ui-button variant="ghost">Cancel</ui-button>
                    <ui-button>Save</ui-button>
                  </div>
                </ui-card-footer>
        </ui-card>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">With Header Action</h3>
        <ui-card>
          <ui-card-header>
            <ui-card-title>Notifications</ui-card-title>
            <ui-card-description>You have 3 unread messages</ui-card-description>
            <ui-card-action>
              <ui-button variant="ghost" size="sm">Mark all read</ui-button>
            </ui-card-action>
          </ui-card-header>
          <ui-card-content>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <ui-avatar size="sm" fallback="JD"></ui-avatar>
                      <div>
                  <p class="text-sm font-medium">New message from John</p>
                  <p class="text-xs text-muted-foreground">2 minutes ago</p>
                </div>
              </div>
            </div>
          </ui-card-content>
        </ui-card>
      </div>
              </div>
              </div>
      }

      <!-- Inputs Section -->
      @if (activeSection() === 'inputs') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Input Components</h2>
            <p class="text-muted-foreground mb-6">Form fields and text inputs</p>
      </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Text Inputs</h3>
              <div class="space-y-4">
                <div class="space-y-2">
                  <ui-label>Name</ui-label>
                  <ui-input type="text" placeholder="Enter your name"></ui-input>
              </div>
                
                <div class="space-y-2">
                  <ui-label>Email</ui-label>
                  <ui-input type="email" placeholder="your@email.com"></ui-input>
            </div>

                <div class="space-y-2">
                  <ui-label>Password</ui-label>
                  <ui-input type="password" placeholder="Enter password"></ui-input>
              </div>
              </div>
            </div>

            <ui-separator></ui-separator>
    
      <div>
              <h3 class="text-lg font-semibold mb-3">Textarea</h3>
              <div class="space-y-2">
                <ui-label>Description</ui-label>
                <ui-textarea placeholder="Tell us more..." [rows]="4"></ui-textarea>
              </div>
          </div>
              </div>
          </div>
      }

      <!-- Progress Section -->
      @if (activeSection() === 'progress') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Progress Components</h2>
            <p class="text-muted-foreground mb-6">Track completion and loading states</p>
      </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Progress Bar</h3>
              <div class="space-y-4">
      <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span class="text-muted-foreground">Progress</span>
                    <span class="font-medium">25%</span>
        </div>
                  <ui-progress [value]="25"></ui-progress>
      </div>

      <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span class="text-muted-foreground">Progress</span>
                    <span class="font-medium">75%</span>
            </div>
                  <ui-progress [value]="75"></ui-progress>
              </div>
            </div>
      </div>

            <ui-separator></ui-separator>
    
      <div>
              <h3 class="text-lg font-semibold mb-3">Progress Steps</h3>
              <div class="space-y-4">
      <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span class="text-muted-foreground">Water intake (6/8)</span>
                    <span class="font-medium">6 of 8</span>
        </div>
                  <ui-progress-steps [steps]="8" [current]="6"></ui-progress-steps>
      </div>
        </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Skeletons</h3>
              <div class="space-y-3">
                <ui-skeleton customClass="h-4 w-full"></ui-skeleton>
                <ui-skeleton customClass="h-4 w-3/4"></ui-skeleton>
                <ui-skeleton customClass="h-4 w-1/2"></ui-skeleton>
              </div>
              </div>
            </div>
            </div>
      }

      <!-- Form Controls Section -->
      @if (activeSection() === 'forms') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Form Control Components</h2>
            <p class="text-muted-foreground mb-6">Checkboxes, radios, switches, and sliders</p>
                </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Checkbox</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <ui-checkbox></ui-checkbox>
            <ui-label>Accept terms and conditions</ui-label>
          </div>
          <div class="flex items-center gap-2">
            <ui-checkbox></ui-checkbox>
            <ui-label>Subscribe to newsletter</ui-label>
          </div>
        </div>
      </div>

              <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Radio Group</h3>
        <ui-radio-group>
          <div class="flex items-center gap-2">
            <ui-radio-item value="option1"></ui-radio-item>
            <ui-label>Option 1</ui-label>
          </div>
          <div class="flex items-center gap-2">
            <ui-radio-item value="option2"></ui-radio-item>
            <ui-label>Option 2</ui-label>
          </div>
          <div class="flex items-center gap-2">
            <ui-radio-item value="option3"></ui-radio-item>
            <ui-label>Option 3</ui-label>
          </div>
        </ui-radio-group>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Switch</h3>
        <div class="space-y-3">
                <div class="flex items-center justify-between p-3 border rounded-lg">
      <div>
                    <ui-label>Dark Mode</ui-label>
              <p class="text-sm text-muted-foreground">Toggle dark theme</p>
            </div>
            <ui-switch [(ngModel)]="switchStates.darkMode"></ui-switch>
          </div>
                <div class="flex items-center justify-between p-3 border rounded-lg">
                  <div>
                    <ui-label>Notifications</ui-label>
              <p class="text-sm text-muted-foreground">Enable push notifications</p>
            </div>
            <ui-switch [(ngModel)]="switchStates.notifications"></ui-switch>
          </div>
        </div>
      </div>

              <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Slider</h3>
        <div class="space-y-2">
                <div class="flex justify-between text-sm">
                  <span class="text-muted-foreground">Volume</span>
                  <span class="font-medium">{{sliderStates.volume}}%</span>
              </div>
              <ui-slider [min]="0" [max]="100" [(ngModel)]="sliderStates.volume"></ui-slider>
            </div>
      </div>

            <ui-separator></ui-separator>

      <div>
              <h3 class="text-lg font-semibold mb-3">Toggle & Toggle Group</h3>
              <div class="space-y-4">
                <div class="flex gap-2">
                  <ui-toggle [(pressed)]="toggleStates.bold">
            <span class="font-bold">B</span>
          </ui-toggle>
                  <ui-toggle [(pressed)]="toggleStates.italic">
            <span class="italic">I</span>
          </ui-toggle>
                  <ui-toggle [(pressed)]="toggleStates.underline">
            <span class="underline">U</span>
          </ui-toggle>
      </div>

          <ui-toggle-group type="single" variant="outline" [(ngModel)]="toggleGroupStates.alignment">
            <ui-toggle-group-item value="left">Left</ui-toggle-group-item>
            <ui-toggle-group-item value="center">Center</ui-toggle-group-item>
            <ui-toggle-group-item value="right">Right</ui-toggle-group-item>
          </ui-toggle-group>
          </div>
        </div>
      </div>
          </div>
      }

      <!-- Navigation Section -->
      @if (activeSection() === 'navigation') {
        <div class="space-y-8 max-w-4xl">
      <div>
            <h2 class="text-2xl font-bold mb-4">Navigation Components</h2>
            <p class="text-muted-foreground mb-6">Tabs, breadcrumbs, and pagination</p>
      </div>

          <div class="space-y-6">
      <div>
              <h3 class="text-lg font-semibold mb-3">Tabs</h3>
        <ui-tabs [(ngModel)]="tabStates.basic">
          <ui-tabs-list>
            <ui-tabs-trigger value="account">Account</ui-tabs-trigger>
            <ui-tabs-trigger value="password">Password</ui-tabs-trigger>
            <ui-tabs-trigger value="notifications">Notifications</ui-tabs-trigger>
          </ui-tabs-list>
          <ui-tabs-content value="account">
            <ui-card>
                    <ui-card-content class="pt-6">
                      <p class="text-sm text-muted-foreground">Account settings content</p>
              </ui-card-content>
            </ui-card>
          </ui-tabs-content>
          <ui-tabs-content value="password">
            <ui-card>
                    <ui-card-content class="pt-6">
                      <p class="text-sm text-muted-foreground">Password settings content</p>
              </ui-card-content>
            </ui-card>
          </ui-tabs-content>
