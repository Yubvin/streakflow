<!-- Dropdown Menu Template -->
<ng-template #dropdownTemplate>
  <ui-dropdown-menu-content>
    <ui-dropdown-menu-label>Actions</ui-dropdown-menu-label>
    <ui-dropdown-menu-item (clicked)="onDropdownAction('edit')">Edit</ui-dropdown-menu-item>
    <ui-dropdown-menu-item (clicked)="onDropdownAction('duplicate')">Duplicate</ui-dropdown-menu-item>
    <ui-dropdown-menu-separator></ui-dropdown-menu-separator>
    <ui-dropdown-menu-item (clicked)="onDropdownAction('delete')">Delete</ui-dropdown-menu-item>
  </ui-dropdown-menu-content>
</ng-template>
