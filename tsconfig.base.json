{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@streakflow/shared-theme": ["libs/shared-theme/src/index.ts"],
      "@streakflow/ui": ["libs/ui/src/index.ts"],
      "@streakflow/ui/aspect-ratio": ["libs/ui/aspect-ratio/src/index.ts"],
      "@streakflow/ui/avatar": ["libs/ui/avatar/src/index.ts"],
      "@streakflow/ui/badge": ["libs/ui/badge/src/index.ts"],
      "@streakflow/ui/breadcrumb": ["libs/ui/breadcrumb/src/index.ts"],
      "@streakflow/ui/button": ["libs/ui/button/src/index.ts"],
      "@streakflow/ui/card": ["libs/ui/card/src/index.ts"],
      "@streakflow/ui/checkbox": ["libs/ui/checkbox/src/index.ts"],
      "@streakflow/ui/hover-card": ["libs/ui/hover-card/src/index.ts"],
      "@streakflow/ui/input": ["libs/ui/input/src/index.ts"],
      "@streakflow/ui/label": ["libs/ui/label/src/index.ts"],
      "@streakflow/ui/pagination": ["libs/ui/pagination/src/index.ts"],
      "@streakflow/ui/progress": ["libs/ui/progress/src/index.ts"],
      "@streakflow/ui/progress-steps": ["libs/ui/progress-steps/src/index.ts"],
      "@streakflow/ui/radio-group": ["libs/ui/radio-group/src/index.ts"],
      "@streakflow/ui/separator": ["libs/ui/separator/src/index.ts"],
      "@streakflow/ui/skeleton": ["libs/ui/skeleton/src/index.ts"],
      "@streakflow/ui/slider": ["libs/ui/slider/src/index.ts"],
      "@streakflow/ui/switch": ["libs/ui/switch/src/index.ts"],
      "@streakflow/ui/tabs": ["libs/ui/tabs/src/index.ts"],
      "@streakflow/ui/textarea": ["libs/ui/textarea/src/index.ts"],
      "@streakflow/ui/toggle": ["libs/ui/toggle/src/index.ts"],
      "@streakflow/ui/toggle-group": ["libs/ui/toggle-group/src/index.ts"],
      "@streakflow/ui/tooltip": ["libs/ui/tooltip/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
